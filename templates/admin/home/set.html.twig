{% extends 'base.html.twig' %}

{% block title %}Modifier le Cron{% endblock %}

{% block body %}
    {% set widgetClass = 'flex flex-col border-stone-200 px-3 py-2 border rounded-md w-full' %}
    {% set labelClass = 'text-sm font-medium ' %}
    {% set required = 'after:content-["*"] after:text-red-500' %}

    <div class="flex justify-between items-center mb-4">
        <a href="{{ path('app_admin_get_home') }}">
            {% include('components/button.html.twig') with {icon: 'arrow-left', type: 'primary'} %}
        </a>
        <h1 class="text-text-800 font-medium text-3xl">
            Modifier le Cron
        </h1>
    </div>




    {{ form_start(form, {'attr': {'class': 'flex flex-col gap-4'}}) }}
    {{ form_label(form.cronDay, null, {'label_attr': {'class': labelClass ~ required}}) }}
    {{ form_widget(form.cronDay, {'attr': {'class': widgetClass}}) }}

    <button class="ease-out duration-300 flex gap-1 items-center text-center justify-center px-3 py-2 border-2 rounded-3xl shadow-white/60 shadow-inner-lg bg-teal-600 hover:bg-teal-500 hover:border-teal-500 active:bg-teal-400 border-teal-600 text-white" type="submit">
        Modifier
    </button>
    {{ form_end(form) }}
{% endblock %}
