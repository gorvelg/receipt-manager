{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <h1 class="text-text-800 font-medium text-3xl my-4">Connexion</h1>
    <form class="flex flex-col gap-2" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <label for="inputEmail">Nom d'utilisateur</label>
    <input class="border-stone-200 px-3 py-2 border rounded-md" type="email" name="username" id="inputUsername"  autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input class="border-stone-200 px-3 py-2 border rounded-md" type="password" name="password" id="inputPassword" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="ease-out duration-300 flex gap-1 items-center text-center justify-center px-3 py-2 border-2 rounded-3xl shadow-white/60 shadow-inner-lg bg-teal-600 hover:bg-teal-500 hover:border-teal-500 active:bg-teal-400 border-teal-600 text-white" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
