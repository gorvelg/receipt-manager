{% set commonClass = "ease-out duration-300 flex gap-1 items-center text-center justify-center px-3 py-2" %}

{% set typeClasses = {
        'primary' : 'text-gray-950 border-2 rounded-3xl shadow-white/60 shadow-inner-lg',
        'secondary': 'border-2',
        'tertiary': ''
} %}

{% set colorClasses = {
        'primary': {
                'bg': 'bg-teal-600 hover:bg-teal-500 hover:border-teal-500 active:bg-teal-400',
                'border': 'border-teal-600',
                'text': 'text-white'
        },
        'info': {
                'bg': 'bg-info-500 hover:bg-info-300 active:bg-info-200',
                'border': 'border-info-600',
                'text': 'text-info-500'
        },
        'success': {
                'bg': 'bg-success-500 hover:bg-success-300 active:bg-success-200',
                'border': 'border-success-600',
                'text': 'text-success-500'
        },
        'danger': {
                'bg': 'bg-danger-500 hover:bg-danger-300 active:bg-danger-200',
                'border': 'border-danger-600',
                'text': 'text-danger-500'
        },
        'warning': {
                'bg': 'bg-warning-500 hover:bg-warning-300 active:bg-warning-200',
                'border': 'border-warning-600',
                'text': 'text-warning-500'
        },
        'light': {
                'bg': 'bg-gray-100 hover:bg-gray-200 active:bg-gray-300',
                'border': 'border-gray-200',
                'text': 'text-gray-500'
        }
} %}

{% set type = type|default('primary') %}
{% set color = color|default('primary') %}

<button class="{{ commonClass }} {{ typeClasses[type] }}
        {% if type == 'primary' %}
                {{ colorClasses[color]['bg'] }}
                {{ colorClasses[color]['border'] }}
                {{ colorClasses[color]['text'] }}
            {% elseif type == 'secondary' %}
                {{ colorClasses[color]['border'] }}
                {{ colorClasses[color]['text'] }}
            {% elseif type == 'tertiary' %}
                {{ colorClasses[color]['text'] }}
            {% endif %}"
        {% if props is defined %}
                {% for key, value in props %}
                        {{ key }}="{{ value }}"
                {% endfor %}
            {% endif %}"
>
        {% if text is defined %}
                {{ text }}
        {% endif %}
        {% if icon is defined %}
                {{ include('@icons/' ~ icon ~ '.svg') }}
        {% endif %}
</button>